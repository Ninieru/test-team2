<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <!-- Database connection settings -->
    <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/teletrabajo?serverTimezone=Europe/Madrid</property>
    <property name="hibernate.connection.username">root</property>
    <property name="hibernate.connection.password">root</property>
    <!-- Enable Hibernate's automatic session context management -->
    <property name="hibernate.current_session_context_class">thread</property>
    <!-- SQL dialect -->
    <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
    <!--<property name="hibernate.show_sql">true</property>
        <property name="hibernate.format_sql">true</property>
        <property name="hibernate.use_sql_comments">true</property>
        -->
    <!--cache -->
    <property name="cache.provider_class">org.hibernate.cache.internal.NoCacheProvider</property>
    <!-- list of xml mapping  to mapping by hibernate-->
    <mapping resource="mapping/Archivo.hbm.xml"/>
    <mapping resource="mapping/Informe.hbm.xml"/>
    <mapping resource="mapping/Version.hbm.xml"/>
    <mapping resource="mapping/Cliente.hbm.xml"/>
    <mapping resource="mapping/Rol.hbm.xml"/>
    <mapping resource="mapping/Tarea.hbm.xml"/>
    <mapping resource="mapping/Prioridad.hbm.xml"/>
    <mapping resource="mapping/Usuario.hbm.xml"/>
    <mapping resource="mapping/Mensaje.hbm.xml"/>
    <mapping resource="mapping/RolUsuarioProyecto.hbm.xml"/>
    <mapping resource="mapping/Chatgrupo.hbm.xml"/>
    <mapping resource="mapping/Requisito.hbm.xml"/>
    <mapping resource="mapping/Permiso.hbm.xml"/>
    <mapping resource="mapping/Tipopermiso.hbm.xml"/>
    <mapping resource="mapping/Proyecto.hbm.xml"/>
    <mapping resource="mapping/UsuarioAlerta.hbm.xml"/>
    <mapping resource="mapping/Alerta.hbm.xml"/>
    <mapping resource="mapping/Tipoalerta.hbm.xml"/>
  </session-factory>
</hibernate-configuration>
