<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>/WEB-INF/applicationContext.xml</param-value>
    </context-param>
    <listener>
        <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
    </listener>


    <servlet>
        <servlet-name>InicioServlet</servlet-name>
        <servlet-class>controlador.InicioServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>InicioServlet</servlet-name>
        <url-pattern>/InicioServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CrearRequisitoServlet</servlet-name>
        <servlet-class>controlador.CrearRequisitoServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CrearRequisitoServlet</servlet-name>
        <url-pattern>/CrearRequisitoServlet</url-pattern>
    </servlet-mapping>
    
    
    <servlet>
        <servlet-name>PruebaServlet</servlet-name>
        <servlet-class>controlador.PruebaServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PruebaServlet</servlet-name>
        <url-pattern>/PruebaServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
